<h1>List of products for subsection "<%= @subsection.name   %>"  </h1>

<table id="product-table">
  <thead>
    <tr>
      <th> title  </th>
      <th> unit price </th>
      <th> weight </th>
      <th> picture </th>
      <th> description</th>
      <th> conservation</th>
      <th> ingredients  </th>
      <th> nutritional values</th>
    </tr>
  </thead>
  <% @subsection.products.each do |product|   %>
     <tr>
      <td><%= product.title %> </td>
      <td><%= product.unit_price %> â‚¬</td>
      <td><%= product.weight %> </td>
      <td><%= image_tag product.picture, size: "100x100" %></td>
      <td><%= product.description %></td>
      <td><%= product.conservation %></td>
      <td>
       <%= product.ingredient.ingredients %>
      </td>
      <td>
        <%= product.nutritional_value.information %>
      </td>
    </tr>
   <p></p>
  <% end %>
</table>

<script type="text/javascript">
$(document).ready(function() {
    $('#product-table').DataTable();
} );
</script>